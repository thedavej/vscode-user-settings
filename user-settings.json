{
    "better-phpunit.commandSuffix": "--stop-on-error --stop-on-failure",
    "better-phpunit.phpunitBinary": "vendor/bin/phpunit",
    
    "breadcrumbs.enabled": true,
    
    "diffEditor.renderSideBySide": false,
    
    "editor.autoIndent": true,
    "editor.cursorBlinking": "phase",
    "editor.cursorWidth": 3,
    "editor.detectIndentation": false,
    "editor.dragAndDrop": false,
    "editor.fontSize": 18,
    "editor.fontFamily": "Hasklig",
    "editor.fontLigatures": true,
    "editor.fontWeight": "300",
    "editor.hover.enabled": true,
    "editor.lineHeight": 0,
    "editor.minimap.enabled": false,
    "editor.occurrencesHighlight": false,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "all",
    "editor.selectionHighlight": true,
    "editor.smoothScrolling": false,
    "editor.tabCompletion": true,
    "editor.tokenColorCustomizations": {
        "comments": "#928585",
    },
    "editor.wordWrap": "on",

    "emmet.triggerExpansionOnTab": true,
    
    "explorer.openEditors.visible": 0,
    "explorer.decorations.colors": true,
    "explorer.decorations.badges": true,
    
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,

    "git.confirmSync": false,
    
    "gitProjectManager.baseProjectsFolders": [
        "~/Code",
    ],
    
    "[javascript]": {
        "editor.tabSize": 2,
    },
    
    "[json]": {
        "editor.tabSize": 2,
    },
    
    "[php]": {
        "editor.formatOnSave": false,
        "editor.rulers": [80, 120]
    },
    
    "phpcs.errorSeverity": 5,
    "phpcs.warningSeverity": 5,
    "phpcs.showSources": true,
    "phpcs.standard": "GreynoiseLaravel",

    "php.suggest.basic": false,

    "rest-client.previewResponseInUntitledDocument": true,

    "search.location": "sidebar",
    "search.useIgnoreFiles": false,
    
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.fontWeight": "300",
    "terminal.integrated.fontWeightBold": "400",
    
    "window.newWindowDimensions": "inherit",
    "window.openFilesInNewWindow": "on",
    "window.zoomLevel": 0,
    
    "workbench.colorCustomizations": {
        "[Material Dark Theme]": {
            "editor.selectionBackground": "#363636",
        },
        
        "diffEditor.insertedTextBackground": "#022b00",
        // "diffEditor.insertedTextBorder": "#af9999",
        "diffEditor.removedTextBackground": "#7a0f0f",
        "diffEditor.removedTextBorder": "#af9999",
        
        "editor.background": "#000",
        "editorGutter.background": "#000",

        "[Flatland_Dark]": {
            "sideBar.background": "#0e0d0d",
            "activityBar.background": "#0e0d0d"
        },

        "[Night Owl]": {
            "activityBar.background": "#131313",
            "activityBar.border": "#3b3b3b",
            "editorSuggestWidget.selectedBackground": "#2a7a16",
            "list.activeSelectionBackground": "#205d2b",
            "list.inactiveSelectionForeground": "#b1b1b1",
            "sideBar.background": "#131313",
            "sideBar.border": "#3b3b3b",
            "sideBar.foreground": "#8BADC1",
            "sideBarTitle.foreground": "#b1b1b1",
            "sideBarSectionHeader.foreground": "#b1b1b1",
        },
        
        "editorLineNumber.foreground": "#7c7a7a",
        "editorWhitespace.foreground": "#585454",

        "editor.lineHighlightBackground": "#161515",

        "statusBar.background": "#000000",
        "statusBar.border": "#d4d4d4",
        "statusBar.foreground": "#d4d4d4",
    },
    
    "workbench.editor.enablePreview": true,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.view.alwaysShowHeaderActions": true,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Night Owl",
    "workbench.iconTheme": "vscode-great-icons",
}
