{
    "better-phpunit.commandSuffix": "--stop-on-error --stop-on-failure",
    "better-phpunit.phpunitBinary": "vendor/bin/phpunit",
    
    "breadcrumbs.enabled": true,
    
    "diffEditor.renderSideBySide": false,
    
    "editor.autoIndent": true,
    "editor.cursorBlinking": "phase",
    "editor.cursorWidth": 3,
    "editor.detectIndentation": false,
    "editor.dragAndDrop": false,
    "editor.fontSize": 18,
    "editor.fontFamily": "Hasklig",
    "editor.fontLigatures": true,
    "editor.fontWeight": "300",
    "editor.hover.enabled": true,
    "editor.largeFileOptimizations": false,
    "editor.lineHeight": 0,
    "editor.minimap.enabled": false,
    "editor.occurrencesHighlight": false,
    "editor.parameterHints.enabled": false,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },
    "editor.quickSuggestionsDelay": 100,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "all",
    "editor.selectionHighlight": true,
    "editor.smoothScrolling": false,
    "editor.snippetSuggestions": "top",
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.tabCompletion": "on",
    "editor.wordWrap": "on",

    "emmet.excludeLanguages": [
        "markdown",
        "php",
    ],
    "emmet.triggerExpansionOnTab": true,
    
    "explorer.openEditors.visible": 0,
    "explorer.decorations.colors": true,
    "explorer.decorations.badges": true,
    
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,

    "git.confirmSync": false,
    
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    
    "gitProjectManager.baseProjectsFolders": [
        "~/Code",
    ],
    
    "[javascript]": {
        "editor.tabSize": 2,
    },

    "[json]": {
        "editor.tabSize": 2,
    },
    
    "[php]": {
        "editor.formatOnSave": false,
        "editor.rulers": [80, 120]
    },
    
    "phpcs.errorSeverity": 5,
    "phpcs.warningSeverity": 5,
    "phpcs.showSources": true,
    "phpcs.standard": "GreynoiseLaravel",

    "php.suggest.basic": false,

    "python.pythonPath": "python3",
    
    "rest-client.previewResponseInUntitledDocument": true,

    "search.location": "sidebar",
    "search.useIgnoreFiles": false,
    
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.fontWeight": "300",
    "terminal.integrated.fontWeightBold": "400",
    
    "window.newWindowDimensions": "inherit",
    "window.openFilesInNewWindow": "on",
    "window.zoomLevel": 0,
    
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.iconTheme": "vscode-great-icons",
    "workbench.settings.editor": "json",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.feedback.visible": false,
    "workbench.view.alwaysShowHeaderActions": true,
    "workbench.colorTheme": "Night Owl Black",
}
